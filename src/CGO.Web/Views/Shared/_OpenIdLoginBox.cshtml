@using (Html.BeginForm("Authenticate", "User", routeValues: new { ReturnUrl = Request.QueryString["ReturnUrl"] }, method: FormMethod.Post, htmlAttributes: new { id = "openid_form" }))
{
    <div id="openIdLogin" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="openIdLoginTitle" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content" style="width: 600px">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="openIdLoginTitle">Log In with OpenID</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="action" value="verify" />
                    <div id="openid_choice">
                        <p>Please choose the account you would like to log in with:</p>
                        <div id="openid_btns"></div>
                    </div>
                    <div id="openid_input_area">
                        <input id="openid_identifier" name="openid_identifier" type="text" value="http://" />
                    </div>
                    <div>
                        <p>Or you can enter your OpenID manually:</p>
                        <input id="openid_manual" name="openid_manual" /><button type="submit" class="btn">Log In</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
