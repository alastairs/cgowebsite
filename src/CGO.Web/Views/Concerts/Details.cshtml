@model CGO.Web.Models.Concert

@{
    ViewBag.Title = Model.Title;
}

<div class="hero-unit">
    <header>
        <h1>@Model.Title</h1>
    </header>
    <section>
        <p><time datetime="@Model.DateAndStartTime.ToString("yyyy-MM-ddTHH:mmzzz")">@Model.DateAndStartTime.ToString("d MMMM yyyy HH.mm")</time>, @Model.Location</p>
        <img src="~/Images/facebook.png" style="width: 50%" />
    </section>
</div>
<section>
    <p>@Html.Markdown(Model.Description)</p>
</section>