@using CGO.Web.Views
@model CGO.Domain.Concert

@{
    ViewBag.Title = Model.Title;
}

<div class="row">
    @Html.Action("Display", "SideBar")

    <div class="col-lg-9">
        <header>
            <h1>@Model.Title</h1>
        </header>
        <section>
            <p class="text-primary"><time datetime="@Model.DateAndStartTime.ToString(FormatStrings.RFC3339DateTime)">@Model.DateAndStartTime.ToString(FormatStrings.FullDateTime)</time>, @Model.Location</p>
            <img src="~/Images/facebook.png" class="concert-poster pull-right" />
        </section>
        <section>
            <p>@Html.Markdown(Model.Description)</p>
        </section>
    </div>
</div>