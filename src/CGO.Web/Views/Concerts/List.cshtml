@model IEnumerable<CGO.Web.ViewModels.ConcertViewModel>

@{
    ViewBag.Title = "All Concerts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>All Concerts</h1>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date and Start Time</th>
            <th>Venue</th>
            <th>Is Published?</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var concert in Model)
        {
            <tr>
                <td>@concert.Title</td>
                <td>@concert.Date.ToShortDateString() @concert.StartTime.ToShortTimeString()</td>
                <td>@concert.Location</td>
                <td>@concert.Published</td>
                <td>
                    <a href="@Url.Action("Publish", "Concerts", routeValues: new { concert.Id })" title="Publish"><i class="icon-bolt icon-large" style="color: gold"></i></a>
                    <a href="@Url.Action("Edit", "Concerts", routeValues: new { concert.Id })" title="Edit"><i class="icon-pencil icon-large" style="color:saddlebrown"></i></a>
                    <a href="@Url.Action("Delete", "Concerts", routeValues: new { concert.Id })" title="Delete"><i class="icon-trash icon-large" style="color: grey"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>